# Career Attendant API - Environment Variables Example
# Copy this file to .env and fill in your actual values

# Development Mode (NEVER set to true in production!)
# When true, bypasses authentication for local testing
DEV_MODE=false

# Clerk Authentication (Get from https://dashboard.clerk.com)
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx

# Clerk URLs
CLERK_FRONTEND_API_URL=https://apparent-javelin-61.clerk.accounts.dev
CLERK_BACKEND_API_URL=https://api.clerk.com
CLERK_JWKS_URL=https://apparent-javelin-61.clerk.accounts.dev/.well-known/jwks.json

# JWKS Public Key (Optional - for reference, JWKS_URL is used for verification)
# Get from: https://apparent-javelin-61.clerk.accounts.dev/.well-known/jwks.json
# CLERK_JWKS_PUBLIC_KEY={"keys":[{"use":"sig","kty":"RSA","kid":"...","alg":"RS256","n":"...","e":"AQAB"}]}

# Frontend and Extension
FRONTEND_URL=http://localhost:3000
EXTENSION_ID=

# Database
DATABASE_URL=postgresql+psycopg://jobaid:jobaidpass@localhost:5432/jobaid

# API Configuration
API_KEY=dev_api_key
PORT=8080
CORS_ORIGINS=*

# Development Only - NEVER use in production
DROP_ALL_TABLES=false
