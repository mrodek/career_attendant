# API service configuration
API_KEY=dev_api_key
APP_PORT=8080

# CORS (comma separated, * allowed for dev)
CORS_ORIGINS=*

# Database
POSTGRES_USER=jobaid
POSTGRES_PASSWORD=jobaidpass
POSTGRES_DB=jobaid
DATABASE_URL=postgresql+psycopg2://jobaid:jobaidpass@db:5432/jobaid

# LLM Configuration (required for job extraction and resume processing)
OPENAI_API_KEY=sk-your-api-key-here

# Security & Encryption (required for production)
ENCRYPTION_MASTER_KEY=generate-secure-32-character-key-here

# File Storage (for production - Railway recommended)
# Railway persistent storage (recommended)
RAILWAY_VOLUME_MOUNT_PATH=/app/uploads

# OR AWS S3 (alternative)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1

# Development mode (bypasses auth, drops tables on restart)
DEV_MODE=true
DROP_ALL_TABLES=true
